<?xml version="1.0" encoding="UTF-8"?>

<project name="lcm-phing-behat-tests" default="testExecutable">
    <!--http://blog.riff.org/2014_02_15_tip_of_the_day_phing_composer_and_namespaced_task_classes-->
    <taskdef name="behat" classname="lastcall\Phing\Behat\BehatTask" />

    <target name="testExecutable" description="bin/behat 2>&amp;1">
        <behat executable="bin/behat"/>
    </target>

    <target name="testPassthru" description="bin/behat">
        <behat executable="bin/behat" passthru="true"/>
    </target>

    <target name="testConfig" description="bin/behat --config [[behat.yml]] 2>&amp;1">
        <behat executable="bin/behat" config="behat.yml"/>
    </target>

    <target name="testFormat" description="bin/behat --format=pretty 2>&amp;1">
        <behat executable="bin/behat" format="pretty"/>
    </target>

    <target name="testOut" description="bin/behat --out=test.log --no-colors 2>&amp;1">
        <behat executable="bin/behat" out="test.log"/>
    </target>

    <target name="testProfile" description="bin/behat --profile=test 2>&amp;1">
        <behat executable="bin/behat" profile="test"/>
    </target>
    <target name="testNoColors" description="bin/behat --no-colors 2>&amp;1">
        <behat executable="bin/behat" nocolors="true"/>
    </target>
</project>